# ========================================
# OrderFlow Environment Variables
# Copy this file to .env.local and fill in your values
# ========================================

# ================================
# SUPABASE CONFIGURATION (Required)
# Get these from: https://supabase.com → Project Settings → API
# ================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ================================
# APP CONFIGURATION
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OrderFlow

# ================================
# GOOGLE MAPS (Optional - for delivery tracking)
# Get from: https://console.cloud.google.com → APIs & Services
# ================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ================================
# TWILIO SMS (Optional - for OTP & notifications)
# Get from: https://console.twilio.com
# ================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# EMAIL CONFIGURATION (Optional - for notifications)
# For Gmail: Enable 2FA and create App Password
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================
# WEB PUSH NOTIFICATIONS (Optional)
# Generate with: npx web-push generate-vapid-keys
# ================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@example.com

# ================================
# PRODUCTION SETTINGS (Set in Vercel)
# ================================
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
